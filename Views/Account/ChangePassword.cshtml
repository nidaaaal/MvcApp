@{
    ViewData["Title"] = "Change Password";
}

@model ChangePasswordViewModel

<nav class="cn">
    <div>
        <a asp-action="Index" asp-controller="Home"><img src="~/images/logo.png" class="logo" /> </a>
    </div>
    <div></div>
    <div class="d-flex gap-2">
        <img src="@(Context.Session.GetString("profileImage"))" class="nav-icon" />
    <p class="title">@Context.Session.GetString("name")</p>
    <form method="post">
        <button type="submit" asp-action="Logout" asp-controller="Account" class="btn">Logout</button>
    </form>
    </div>
</nav>

<form class="containerform" method="post">
    <p class="title">Change Your Password</p>
    <div class="form-group">
        <label asp-for="OldPassword"></label>
        <input asp-for="OldPassword" type="password" class="form-control" />
        <span asp-validation-for="OldPassword" class="error small"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" type="password" class="form-control" />
        <span asp-validation-for="NewPassword" class="error small"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="error small"></span>
    </div>
    <div class="line">
        <a asp-action="Profile" asp-controller="User" class="btn">Back</a>
        <button type="submit" class="btn">Update</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}