@model MvcApp.Models.ViewModels.RegisterViewModel;

<nav class="cn">
    <a href="Dashboard.aspx">  <img src="../Content/images/booking logo.png" class="logo" /> </a>
    <a href="Login.aspx" class="btn">Login</a>
    <a href="Register.aspx" class="btn">Register</a>
</nav>

<div class="card">
   <form asp-action="Register" method="post">

       <h1 class="title">Registration</h1>

    <div class="form-group">
       <label asp-for="UserName"></label>
       <input asp-for="UserName" type="text" />
       <span asp-validation-for="UserName" class="error"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

        <h3 class="title">Personal Information</h3>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>

    <div class="form-group">
        <label asp-for="DisplayName"></label>
        <input asp-for="DisplayName" />
        <span asp-validation-for="DisplayName"></span>
    </div>

    <div class="form-group">
        <label>Date Of Birth</label>
        <div class="line">
        <select asp-for="Day" id="ddlDay"></select>
        <select asp-for="Month" id="ddlMonth"></select>
        <select asp-for="Year" id="ddlYear"></select>
        </div>
        <span asp-validation-for="Year"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" id="txtAge" class="form-group" readonly/>
    </div>

    <div class="form-group">
        <label >Gender</label><br/>
        <label>
            <input type="radio" asp-for="Gender" value="1" /> Male
        </label>
        <label class="ms-3">
            <input type="radio" asp-for="Gender"  value="0" /> Female
        </label>
            <span asp-validation-for="Gender"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>

    <div class="form-group">
        <label>State</label>
        <select asp-for="State" id="ddlState">
            <option value="">-- select state --</option>
            <option value="kerala">text</option>
            <option value="value">text</option>
            <option value="value">text</option>
        </select>
        <span asp-validation-for="State"></span>
    </div>

    <div class="form-group">
        <label>City</label>
        <select asp-for="City" id="ddlCity">
            <option value="">-- select state first --</option>
        </select>
        <span asp-validation-for="City"></span>
    </div>

    <div class="form-group">
         <label asp-for="ZipCode"></label>
         <input asp-for="ZipCode" />
         <span asp-validation-for="ZipCode"></span>
    </div>

    <div class="form-group">
         <label asp-for="Phone"></label>
         <input asp-for="Phone" />
         <span asp-validation-for="Phone"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mobile"></label>
        <input asp-for="Mobile" />
        <span asp-validation-for="Mobile"></span>
    </div>

    <br />

    <button type="reset" class="btn btn-secondary">Cancel</button>
    <button type="submit" class="btn btn-secondary">Register</button>

   </form>
</div>