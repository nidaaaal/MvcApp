 @model IEnumerable<UsersViewModel>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<nav class="cn">
    <div>
        <a asp-action="Users" asp-controller="Admin"><img src="~/images/logo.png" class="logo" /></a>
    </div>
    <div></div>
    <div class="d-flex gap-2">
        <img src="~/images/profile.jpg" class="nav-icon" />
        <p class="title">Admin</p>
        <form method="post">
            <button type="submit" asp-action="Logout" asp-controller="Account" class="btn">Logout</button>
        </form>
    </div>
</nav>

<div class="containerform">
    <h3 class="title">User Management</h3>
    <div class="table-responsive">
    <table class="table table-hover table-light">
        <thead>
            <tr class="text-center">
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Actions</th>
             </tr>
        </thead>

        <tbody>
            @foreach(var users in Model)
            {
                <tr class="text-center">
                    <td>@users.Id</td>
                    <td>@users.FirstName</td>
                    <td>@users.LastName</td>
                    <td>@users.Phone</td>
                    <td>@users.Role</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@users.Id" class="btn">Edit</a>
                            <form asp-action="DeleteUser" asp-controller="Admin" asp-route-id="@users.Id" method="post"
                                style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                  @Html.AntiForgeryToken()
                                <button type="submit" class="btn-danger">Delete</button>

                              </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    </div>

</div>
